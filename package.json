{
  "name": "remotion-studio",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/*"
  ],
  "scripts": {
    "dev:all": "pnpm -r --parallel --stream dev",
    "build:all": "pnpm -r --stream build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "create:project": "tsx scripts/create-project.ts",
    "render:all": "tsx scripts/render-all.ts",
    "sync:assets": "tsx scripts/sync-assets.ts",
    "templateize": "node scripts/templateize.js",
    "dev": "tsx scripts/dev.ts",
    "preview": "tsx scripts/preview.ts",
    "build:app": "tsx scripts/build-app.ts",
    
    "mcp:remotion": "tsx scripts/mcp-remotion.ts",
    "dev:test": "pnpm -F @studio/test run dev"
  },
  "devDependencies": {
    "@remotion/cli": "^4.0.350",
    "@types/node": "^24.5.2",
    "eslint": "^9.8.0",
    "fast-glob": "^3.3.3",
    "prettier": "^3.3.3",
    "remotion": "^4.0.350",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@remotion/zod-types": "4.0.350",
    "zod": "^4.1.11"
  }
}
