{
  "name": "remotion-studio",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "create:project": "tsx scripts/create-project.ts",
    "sparse:apps": "bash scripts/setup-sparse-apps.sh",
    "dev": "echo 'Use: pnpm -C apps/<name> run dev'",
    "preview": "echo 'Use: pnpm -C apps/<name> run preview'",
    "build:app": "echo 'Use: pnpm -C apps/<name> run build'"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {}
}
