{
  "name": "remotion-studio",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@*/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && tsx scripts/clean.ts",
    "create:project": "tsx scripts/create-project.ts",
    "render": "tsx scripts/render-app.ts",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "tsx scripts/analyze-bundle.ts",
    "benchmark": "tsx scripts/benchmark.ts",
    "commit": "cz",
    "prepare": "husky",
    "upgrade:remotion": "tsx scripts/upgrade-remotion.ts",
    "upgrade:remotion:dry": "tsx scripts/upgrade-remotion.ts --dry-run",
    "preview": "echo 'Use: pnpm -C apps/<name> run preview'",
    "build:app": "echo 'Use: pnpm -C apps/<name> run build'"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "turbo": "^2.0.0",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jsdom": "^25.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "storybook": "^8.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@remotion/cli": "catalog:",
    "@remotion/studio": "catalog:",
    "@remotion/player": "catalog:",
    "@remotion/renderer": "catalog:",
    "@remotion/bundler": "catalog:",
    "@remotion/eslint-plugin": "catalog:",
    "@remotion/eslint-config": "catalog:",
    "@remotion/lambda": "catalog:",
    "@remotion/cloudrun": "catalog:",
    "@remotion/three": "catalog:",
    "@remotion/skia": "catalog:",
    "@remotion/lottie": "catalog:",
    "@remotion/gif": "catalog:",
    "@remotion/rive": "catalog:",
    "@remotion/shapes": "catalog:",
    "@remotion/paths": "catalog:",
    "@remotion/motion-blur": "catalog:",
    "@remotion/transitions": "catalog:",
    "@remotion/animation-utils": "catalog:",
    "@remotion/animated-emoji": "catalog:",
    "@remotion/layout-utils": "catalog:",
    "@remotion/noise": "catalog:",
    "@remotion/media": "catalog:",
    "@remotion/media-utils": "catalog:",
    "@remotion/media-parser": "catalog:",
    "@remotion/webcodecs": "catalog:",
    "@remotion/captions": "catalog:",
    "@remotion/fonts": "catalog:",
    "@remotion/google-fonts": "catalog:",
    "@remotion/preload": "catalog:",
    "@remotion/install-whisper-cpp": "catalog:",
    "@remotion/whisper-web": "catalog:",
    "@remotion/openai-whisper": "catalog:",
    "@remotion/tailwind": "catalog:",
    "@remotion/tailwind-v4": "catalog:",
    "@remotion/enable-scss": "catalog:",
    "@remotion/zod-types": "catalog:",
    "@remotion/licensing": "catalog:"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
