{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@studio/*": [
        "packages/@core/*/src",
        "packages/@animation/*/src",
        "packages/@visual/*/src",
        "packages/@audio/*/src",
        "packages/@content/*/src"
      ],
      "@design/*": [
        "packages/@design/*/src",
        "packages/@design/*"
      ]
    }
  }
}
